<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_maps_parameters_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        app:layout_constraintBottom_toTopOf="@+id/spinner_categories_parameters"
        app:layout_constraintStart_toStartOf="@+id/spinner_categories_parameters" />

    <TextView
        android:id="@+id/txt_maps_parameters_radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Radius"
        app:layout_constraintBottom_toTopOf="@+id/edit_maps_parameters_radius"
        app:layout_constraintStart_toStartOf="@+id/edit_maps_parameters_radius" />

    <EditText
        android:id="@+id/edit_maps_parameters_radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_categories_parameters" />

    <TextView
        android:id="@+id/txt_meters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="meters"
        app:layout_constraintBottom_toBottomOf="@+id/edit_maps_parameters_radius"
        app:layout_constraintStart_toEndOf="@+id/edit_maps_parameters_radius" />

    <Button
        android:id="@+id/btn_confirmation_update_parameters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_maps_parameters_radius" />

    <Spinner
        android:id="@+id/spinner_categories_parameters"
        android:layout_width="210sp"
        android:layout_height="40sp"
        android:layout_marginTop="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>