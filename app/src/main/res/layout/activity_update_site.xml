<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_update_name_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Site's name"
        app:layout_constraintBottom_toTopOf="@+id/edit_update_name_site"
        app:layout_constraintStart_toStartOf="@+id/edit_update_name_site" />

    <EditText
        android:id="@+id/edit_update_name_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_update_latitude_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude"
        app:layout_constraintBottom_toTopOf="@+id/edit_update_latitude_site"
        app:layout_constraintStart_toStartOf="@+id/edit_update_latitude_site" />

    <EditText
        android:id="@+id/edit_update_latitude_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_update_name_site" />


    <TextView
        android:id="@+id/txt_update_longitude_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude"
        app:layout_constraintBottom_toTopOf="@+id/edit_update_longitude_site"
        app:layout_constraintStart_toStartOf="@+id/edit_update_longitude_site" />

    <EditText
        android:id="@+id/edit_update_longitude_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_update_latitude_site" />

    <TextView
        android:id="@+id/txt_update_address_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postal Address"
        app:layout_constraintBottom_toTopOf="@+id/edit_update_address_site"
        app:layout_constraintStart_toStartOf="@+id/edit_update_address_site" />

    <EditText
        android:id="@+id/edit_update_address_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_update_longitude_site" />

    <TextView
        android:id="@+id/txt_update_category_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        app:layout_constraintBottom_toTopOf="@+id/edit_update_category_site"
        app:layout_constraintStart_toStartOf="@+id/edit_update_category_site" />

    <EditText
        android:id="@+id/edit_update_category_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_update_address_site" />

    <TextView
        android:id="@+id/txt_update_resume_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resume"
        app:layout_constraintBottom_toTopOf="@+id/edit_update_resume_site"
        app:layout_constraintStart_toStartOf="@+id/edit_update_resume_site" />

    <EditText
        android:id="@+id/edit_update_resume_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_update_category_site" />

    <Button
        android:id="@+id/btn_confirmation_update_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_update_resume_site" />

    <Button
        android:id="@+id/btn_confirmation_delete_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_confirmation_update_site" />
</androidx.constraintlayout.widget.ConstraintLayout>