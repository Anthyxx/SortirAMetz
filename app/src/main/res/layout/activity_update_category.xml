<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_update_name_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category's name"
        app:layout_constraintBottom_toTopOf="@+id/edit_update_name_category"
        app:layout_constraintStart_toStartOf="@+id/edit_update_name_category" />

    <EditText
        android:id="@+id/edit_update_name_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_confirmation_update_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Update"
        app:layout_constraintStart_toStartOf="@+id/edit_update_name_category"
        app:layout_constraintTop_toBottomOf="@+id/edit_update_name_category" />

    <Button
        android:id="@+id/btn_confirmation_delete_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="@+id/edit_update_name_category"
        app:layout_constraintTop_toBottomOf="@+id/edit_update_name_category" />
</androidx.constraintlayout.widget.ConstraintLayout>